---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";

interface Props {
  photo: ImageMetadata;
  title: string;
  specialty: string;
}

const card = Astro.props;
const { photo, title, specialty } = card;
---

<div
  class="flex flex-col items-center gap-3 p-7 rounded-md shadow-lg h-full hover:animate-tilt transition-transform duration-500 ease-in-out dark:text-white/90 dark:bg-neutral-800"
>
  <Image src={photo} width={325} height={325} alt="programmer" />
  <p class="text-lg text-justify whitespace-pre-line word-break-all">
    <h4 class="text-lg font-semibold text-neutral-500">
      {title}
    </h4>
    <div>
      <span class="font-bold text-[#57d8c7]">{specialty}</span>
    </div>
  </p>
</div>
