---
interface Props {
  stateName: string;
  width: string;
  porcentage: string;
}
const region = Astro.props;
const { stateName, width, porcentage } = region;
---

<div
  class="flex flex-col items-center gap-2 md:justify-around md:flex-row md:w-2/3"
>
  <span class="text-lg font-semibold text-gray-600 dark:text-white/80 md:w-1/3"
    >{stateName}</span
  >
  <div
    class="flex items-center gap-3 bg-transparent border border-gray-400 dark:border-neutral-600 rounded-md h-12 w-72 md:w-[80%] md:min-w-xl"
  >
    <div class="bar min-h-[80%] rounded-md mx-1" style=`width: ${width}%;`>
    </div>
    <span
      class="text-lg
            font-semibold
            text-gray-600
            dark:text-white
            80"
      >{porcentage}</span
    >
  </div>
</div>

<style>
  .bar {
    background: linear-gradient(
      90deg,
      rgba(18, 166, 149, 1) 14%,
      rgba(92, 255, 233, 1) 82%
    );
  }
</style>
